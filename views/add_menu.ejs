<!-- views/owner_dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Owner Dashboard</title>
  </head>
  <body>
    <h1>Owner Dashboard</h1>
    <form action="/add_menu" method="POST">
      <h2>Set Menu for the Week</h2>

      <!-- Meal Type Selection (Breakfast, Lunch, Dinner) -->
      <label for="mealType">Meal Type:</label>
      <select name="mealType" id="mealType" required>
        <option value="breakfast">Breakfast</option>
        <option value="lunch">Lunch</option>
        <option value="dinner">Dinner</option>
      </select>

      <!-- Loop for Each Day of the Week -->
      <div>
        <h3>Monday</h3>
        <label for="mondayItem">Menu Item:</label>
        <input type="text" name="mondayItem" id="mondayItem" required />
        <label for="mondayPrice">Price:</label>
        <input type="number" name="mondayPrice" id="mondayPrice" required />
      </div>

      <div>
        <h3>Tuesday</h3>
        <label for="tuesdayItem">Menu Item:</label>
        <input type="text" name="tuesdayItem" id="tuesdayItem" required />
        <label for="tuesdayPrice">Price:</label>
        <input type="number" name="tuesdayPrice" id="tuesdayPrice" required />
      </div>

      <div>
        <h3>Wednesday</h3>
        <label for="wednesdayItem">Menu Item:</label>
        <input type="text" name="wednesdayItem" id="wednesdayItem" required />
        <label for="wednesdayPrice">Price:</label>
        <input
          type="number"
          name="wednesdayPrice"
          id="wednesdayPrice"
          required
        />
      </div>

      <div>
        <h3>Thursday</h3>
        <label for="thursdayItem">Menu Item:</label>
        <input type="text" name="thursdayItem" id="thursdayItem" required />
        <label for="thursdayPrice">Price:</label>
        <input type="number" name="thursdayPrice" id="thursdayPrice" required />
      </div>

      <div>
        <h3>Friday</h3>
        <label for="fridayItem">Menu Item:</label>
        <input type="text" name="fridayItem" id="fridayItem" required />
        <label for="fridayPrice">Price:</label>
        <input type="number" name="fridayPrice" id="fridayPrice" required />
      </div>

      <div>
        <h3>Saturday</h3>
        <label for="saturdayItem">Menu Item:</label>
        <input type="text" name="saturdayItem" id="saturdayItem" required />
        <label for="saturdayPrice">Price:</label>
        <input type="number" name="saturdayPrice" id="saturdayPrice" required />
      </div>

      <div>
        <h3>Sunday</h3>
        <label for="sundayItem">Menu Item:</label>
        <input type="text" name="sundayItem" id="sundayItem" required />
        <label for="sundayPrice">Price:</label>
        <input type="number" name="sundayPrice" id="sundayPrice" required />
      </div>

      <button type="submit">Save Menu</button>
    </form>
  </body>
</html>
